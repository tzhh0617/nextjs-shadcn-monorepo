{
  "extends": "../../tsconfig.app.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/hooks/*": ["./src/hooks/*"]
    },
    "composite": true
  },
  "references": [{ "path": "../types" }, { "path": "../utils" }],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
